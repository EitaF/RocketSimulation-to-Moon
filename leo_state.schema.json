{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "leo_state.schema.json",
  "title": "LEO State Schema",
  "description": "Standardized LEO state vector for launch-to-lunar handoff (Professor v44 specification)",
  "type": "object",
  "required": ["time", "position", "velocity", "mass", "RAAN", "eccentricity"],
  "properties": {
    "time": {
      "type": "number",
      "description": "UTC timestamp when state was captured",
      "minimum": 0
    },
    "position": {
      "type": "array",
      "description": "Position vector [x, y, z] in Earth-centered inertial frame (km)",
      "items": {
        "type": "number"
      },
      "minItems": 3,
      "maxItems": 3
    },
    "velocity": {
      "type": "array", 
      "description": "Velocity vector [vx, vy, vz] in Earth-centered inertial frame (km/s)",
      "items": {
        "type": "number"
      },
      "minItems": 3,
      "maxItems": 3
    },
    "mass": {
      "type": "number",
      "description": "Total spacecraft mass including fuel (kg)",
      "minimum": 10000,
      "maximum": 100000
    },
    "RAAN": {
      "type": "number",
      "description": "Right Ascension of Ascending Node (rad)",
      "minimum": 0,
      "maximum": 6.283185307179586
    },
    "eccentricity": {
      "type": "number",
      "description": "Orbital eccentricity (dimensionless, must be < 0.01 for LEO)",
      "minimum": 0,
      "maximum": 0.01
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "time": 1704067200.0,
      "position": [6556.0, 0.0, 0.0],
      "velocity": [0.0, 7.788, 0.0], 
      "mass": 45000.0,
      "RAAN": 0.5,
      "eccentricity": 0.005
    }
  ]
}